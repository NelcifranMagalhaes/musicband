<article class="message is-dark">
  <div class="message-header">
    <p>Entrar</p>
</div>
 </article>

<div class="box">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <%= f.input :email,input_html: { class: 'input'}, required: true, autofocus: true ,placeholder:"Email"%>
      <span class="icon is-small is-left">
        <i class="fa fa-envelope"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= f.input :password,input_html: { class: 'input'} ,placeholder: "Password", required: true %>
      <span class="icon is-small is-left">
        <i class="fa fa-lock"></i>
      </span>
    </p>
  </div>

  <div>
      <%= f.input :remember_me,as: :boolean if devise_mapping.rememberable? %>
  </div>
  <br></br>
    
    <div class="buttons">
      <%= f.button :submit, "Entrar" ,class: "button is-link"%>

        <%= link_to "Cadastrar-se", new_registration_path(resource_name),class: "button" %>

        <%= link_to "Esqueceu a senha?", new_password_path(resource_name),class: "button is-danger" %>

    </div>

<% end %>
</div>
