<div class="container">
  <p id="notice"><%= notice %></p>
  <article class="message is-dark">
    <div class="message-header">
      <p>Discografia/MÃºsicas</p>
    </div>
  </article>   

  <div class="row columns">

    <% @discographies.each do |discography| %>
    <div class="column">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            <%= discography.name %>
          </p>
          <a href="#" class="card-header-icon" aria-label="more options">
            <span class="icon">
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </span>
          </a>
        </header>
        <div class="card-content">
          <div class="content">
            <%= link_to discography.description ,target: "_blank" do%>
              <span style="font-size: 48px; color: red;">
                <i class="fa fa-youtube fa-3x"></i>
              </span>
            <% end %>
            <br>
            <p class="title is-4"><%= l discography.date_rise %></p>
          </div>
        </div>
        <footer class="card-footer">
          <% if current_user.present? %>
            <%= link_to 'Ver', discography,class: "card-footer-item button is-link"%>
            <%= link_to 'Editar', edit_discography_path(discography),class: "card-footer-item button" %>
            <%= link_to 'Deletar', discography,class: "card-footer-item button is-danger",method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </footer>
      </div>
    </div>
    <% end %>
  </div>
  &nbsp;
  <% if current_user.present? %>
    <%= link_to 'Nova Discografia', new_discography_path,class: "button is-info is-inverted"  %>
  <% end %>
</div>
